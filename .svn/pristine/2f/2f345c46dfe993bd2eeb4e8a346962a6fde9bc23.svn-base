body {
    padding-top: 50px;
    padding-bottom: 20px;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

/* Override the default bootstrap behavior where horizontal description lists 
   will truncate terms that are too long to fit in the left column 
*/
.dl-horizontal dt {
    white-space: normal;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}

/*  Added by staylor */
html {
    position: relative;
    min-height: 99%;
}

body {
    margin-bottom: 60px;
}

.footer {
    position: absolute;
    bottom: 10px;
    width: 96%;
    height: 60px;
}

.submenu {
    display: none;
    position: absolute;
    width: 150%;
    background: #5C87B2;
    border-top: 5px solid #5C87B2;
    filter: alpha(opacity=80);
    /*-moz-opacity: 0.8;
            -khtml-opacity: 0.8;*/
    opacity: 0.8;
    text-align:left;
}

    .submenu span, a, a:hover {
        line-height: 2.1em;
        color: black;
        text-decoration: none;
    }

.submenuItem:hover {
    font-weight: bold !important;
    text-decoration: none !important;
}

li {
    list-style-type: none;
    list-style-position: inside !important;
    margin: 0 !important;
    padding: 0 !important;
}